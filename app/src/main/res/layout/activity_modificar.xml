<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eva"
    tools:context=".Modificar">

    <Spinner
        android:id="@+id/spinner_minuto"
        android:layout_width="0dp"
        android:layout_height="25dp"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/spinner_hora" />

    <TextView
        android:id="@+id/tv_ponerprograma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ZONAS"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/et_duracion"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <CheckBox
        android:id="@+id/cb_zona2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Zona 2"
        app:layout_constraintStart_toStartOf="@+id/cb_zona1"
        app:layout_constraintTop_toBottomOf="@+id/cb_zona1" />

    <CheckBox
        android:id="@+id/cb_zona1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Zona 1"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DÍAS"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <CheckBox
        android:id="@+id/cb_lunes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lunes"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <CheckBox
        android:id="@+id/cb_miercoles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Miércoles"
        app:layout_constraintEnd_toStartOf="@+id/spinner_hora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_martes" />

    <CheckBox
        android:id="@+id/cb_martes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Martes"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toBottomOf="@+id/cb_lunes" />

    <CheckBox
        android:id="@+id/cb_domingo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Domingo"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toBottomOf="@+id/cb_sabado" />

    <CheckBox
        android:id="@+id/cb_viernes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Viernes"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toBottomOf="@+id/cb_jueves" />

    <CheckBox
        android:id="@+id/cb_jueves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jueves"
        app:layout_constraintStart_toStartOf="@+id/cb_miercoles"
        app:layout_constraintTop_toBottomOf="@+id/cb_miercoles" />

    <CheckBox
        android:id="@+id/cb_sabado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sábado"
        app:layout_constraintStart_toStartOf="@+id/cb_jueves"
        app:layout_constraintTop_toBottomOf="@+id/cb_viernes" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="HORA"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/spinner_hora"
        app:layout_constraintTop_toBottomOf="@+id/tv_ponerprograma"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="DURACIÓN"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/spinner_hora"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="32dp"
        android:onClick="aceptar"
        android:text="ACEPTAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#FFFFFF"
        android:background="@drawable/custon_button"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cancelar"
        android:text="CANCELAR"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button6"
        android:textColor="#FFFFFF"
        android:background="@drawable/custon_button"
        android:textAllCaps="false"/>

    <Spinner
        android:id="@+id/spinner_hora"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="Hrs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_minuto"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        app:layout_constraintEnd_toStartOf="@+id/spinner_minuto"
        app:layout_constraintTop_toTopOf="@+id/textView11"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <EditText
        android:id="@+id/et_duracion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/spinner_hora"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="min"
        app:layout_constraintStart_toEndOf="@+id/et_duracion"
        app:layout_constraintTop_toTopOf="@+id/et_duracion"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowRadius="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>